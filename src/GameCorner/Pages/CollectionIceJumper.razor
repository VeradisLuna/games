                </div>
            </a>
        </div>
    </div>
</div>

@code {
    private const string Slug = "ice-jumper";

    private int miniProgress;
    private int letterheadProgress;
    private int hexiconProgress;
    private int cryptiniProgress;

    private string letterheadTitle = "?????";
    private string hexiconTitle = "???????";

    protected override async Task OnInitializedAsync()
    {
        (miniProgress, _) = await ProgressChecker.GetProgressAsync("lunamini", Slug);

        var letterheadResult = await ProgressChecker.GetProgressAsync("letterhead", Slug);
        letterheadProgress = letterheadResult.progress;
        if (letterheadResult.showTitle)
            letterheadTitle = "GRUMP";

        var hexiconResult = await ProgressChecker.GetProgressAsync("hexicon", Slug);
        hexiconProgress = hexiconResult.progress;
        if (hexiconResult.showTitle)
            hexiconTitle = "NAUGHTY";

        (cryptiniProgress, _) = await ProgressChecker.GetProgressAsync("cryptini", Slug);
    }

    private string BadgeClass(int progress) => progress switch
    {
        3 => "badge-done",
        2 => "badge-done",
        1 => "badge-started",
        _ => "badge-hidden"
    };

    private string BadgeSymbol(int progress) => progress switch
    {
        3 => "✔",
        2 => "✔",
        1 => "…",
        _ => ""
    };

    private static string Indicator(int p) => p switch
    {
        3 => " (✔)",
        2 => " (✔)",
        1 => " (…)",
        _ => ""
    };
}
