                    <h2>Global hits</h2>
                    <p>Luna Mini</p>
                </div>
            </a>
        </div>
        @if (DateOnly.FromDateTime(DateTime.Now) >= new DateOnly(2025, 11, 13))
        {
            <div class="game-card">
                <a href="mini/2025-10-21">
                    <div class="card-content">
                        <h2>On the record</h2>
                        <p>Luna Mini</p>
                    </div>
                </a>
            </div>
            <div class="game-card">
